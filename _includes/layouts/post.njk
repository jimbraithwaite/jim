---
layout: layouts/base.njk
section: post
---

<article>
  <header class="c-page__head">
      <h1>{{ title }}</h1>
      <nav>
        <a href="{{ '/travel/' | url }}">‚Üê Travel index</a>
      </nav>
  </header>

  {{ layoutContent | safe }}

  {% if tags %}
    <p>
    {% for tag in tags %}
      {%- if tag != "post" -%}
        {% set tagUrl %}/tags/{{ tag }}/{% endset %}
        <a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
      {%- endif -%}
    {% endfor %}
    </p>
  {% endif %}

</article>
